<!--managerとschedulerすべてに共通-->

<!DOCTYPE html>
<head>
  <title>ShiftApp</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet">

  <!-- 共通CSS -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

  <!-- 名前空間ごとのCSS（manager / scheduler） -->
  <% if controller.controller_path.start_with?("manager") %>
    <%= stylesheet_link_tag "manager/base", "data-turbo-track": "reload" %>
  <% elsif controller.controller_path.start_with?("scheduler") %>
    <%= stylesheet_link_tag "scheduler/base", "data-turbo-track": "reload" %>
  <% end %>

  <!-- JavaScript -->
  <%= javascript_importmap_tags %>

  <!-- Swiper CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>


  <body>
    <!--トースト通知-->
    <% if flash[:notice] || flash[:alert] %>
      <div
        class="toast"
        data-controller="toast"
      >
        <% if flash[:notice] %>
          <div class="toast__icon">
            <%= image_tag "icon__check.svg", alt: "成功", class: "toast__icon" %>
          </div>
          <p><%= flash[:notice] %></p>
        <% else %>
          <p><%= flash[:alert] %></p>
        <% end %>
      </div>
    <% end %>



    <%= yield %>


    <!-- javaScript -->
    <!--<%= javascript_include_tag "application", type: "module" %>-->

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
      document.addEventListener("turbo:load", function () {
        const swiper = new Swiper(".swiper-main", {
          loop: false,
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
          allowTouchMove: true,
          on: {
            slideChange: function () {
              const navItems = document.querySelectorAll(".tab-nav .nav-item")
              navItems.forEach(item => item.classList.remove("active"))
              navItems[this.activeIndex].classList.add("active")
            }
          }
        })
        // ナビゲーションタップでも切り替える
        document.querySelectorAll(".tab-nav .nav-item").forEach((tab, index) => {
          tab.addEventListener("click", () => {
            swiper.slideTo(index)
          })
        })
      })
    </script>

  </body>
</html>
